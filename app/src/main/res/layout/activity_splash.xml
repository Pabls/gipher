<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.splash.view.SplashActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="GI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_first_logo"
                android:textColor="@color/accent"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_56"
                app:layout_constraintEnd_toStartOf="@+id/tv_second_logo"
                app:layout_constraintTop_toTopOf="@+id/tv_second_logo"/>
        <TextView
                android:text="PH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_second_logo"
                android:layout_marginStart="@dimen/margin_8"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_56"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="@dimen/margin_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="ER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#09806c"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_56"
                android:id="@+id/tv_third_logo"
                app:layout_constraintStart_toEndOf="@+id/tv_second_logo"
                app:layout_constraintTop_toTopOf="@+id/tv_second_logo"/>

        <TextView
                android:text="@string/activity_splash.text.app_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/comet"
                android:textSize="@dimen/text_size_18"
                android:id="@+id/tv_info"
                android:layout_marginBottom="@dimen/margin_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_8"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>